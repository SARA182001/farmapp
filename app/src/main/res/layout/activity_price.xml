<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PRICE">
    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*THE PRICE"
        android:textSize="20dp"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*From Sunday to Wednesday 55 riyals"
        android:textSize="20dp"
        android:textColor="@android:color/holo_blue_light" />
    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Thursday 80"
        android:textSize="20dp"
        android:textColor="@android:color/holo_blue_light" />
    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Saturday 100 riyals"
        android:textSize="20dp"
        android:textColor="@android:color/holo_blue_light" />
    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Friday and holidays 120 riyals"
        android:textSize="20dp"
        android:textColor="@android:color/holo_blue_light"/>
    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*(Timing from 10 am to 10 pm)"
        android:textSize="20dp"
        android:textColor="@android:color/holo_blue_light"/>
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="302dp"
        app:srcCompat="@drawable/s112" />
    <Button
        android:id="@+id/bb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back To Home Page" />
</LinearLayout>